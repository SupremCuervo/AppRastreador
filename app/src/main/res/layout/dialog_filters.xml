<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="24dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Mostrar objetos:"
		android:textSize="18sp"
		android:textStyle="bold"
		android:layout_marginBottom="16dp" />

	<CheckBox
		android:id="@+id/cbHumans"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Humanos"
		android:textSize="16sp"
		android:layout_marginBottom="12dp" />

	<CheckBox
		android:id="@+id/cbKnownObjects"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Objetos conocidos"
		android:textSize="16sp"
		android:layout_marginBottom="12dp" />

	<CheckBox
		android:id="@+id/cbUnknownObjects"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Objetos desconocidos"
		android:textSize="16sp"
		android:layout_marginBottom="24dp" />

	<TextView
		android:id="@+id/tvConfidence"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Confianza mÃ­nima: 30%"
		android:textSize="16sp"
		android:layout_marginBottom="8dp" />

	<SeekBar
		android:id="@+id/seekBarConfidence"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:max="100"
		android:progress="30" />

</LinearLayout>

